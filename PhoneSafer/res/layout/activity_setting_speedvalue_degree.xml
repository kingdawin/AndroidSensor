    <TextView
        android:id="@+id/tv_degree_xy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:height="40dp"
        android:text="当前设置的角度x=,y="
        android:textColor="@color/cpb_red"
       /> 

    <com.hy2014.phonesafer.view.GaugeChart01View
        android:id="@+id/chart_view_x"
        android:layout_width="250dip"
        android:layout_height="150dip"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tv_x_degree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:height="40dp"
        android:text="X与水平面夹角"
        android:textColor="#ffffff" />

    <com.hy2014.phonesafer.view.GaugeChart01View
        android:id="@+id/chart_view_y"
        android:layout_width="250dip"
        android:layout_height="150dip"
        android:layout_gravity="center" />

     <TextView
        android:id="@+id/tv_y_degree"
        android:layout_width="match_parent"
